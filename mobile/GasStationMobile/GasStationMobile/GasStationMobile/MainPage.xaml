<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GasStationMobile.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="GasStation" FontSize="24" HorizontalOptions="CenterAndExpand" TextColor="Black" />
        <Image Source="gas_station_icon.png" HeightRequest="100" WidthRequest="100" HorizontalOptions="CenterAndExpand" />
        <Button Text="Registration" Clicked="OnRegistrationClicked" BackgroundColor="Blue" TextColor="White" />
        <Button Text="Login" Clicked="OnLoginClicked" BackgroundColor="Blue" TextColor="White" />
    </StackLayout>

</ContentPage>