<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GasStationMobile.Views.LoginToAccountPage"
             Title="Login">

    <StackLayout>
        <Entry Placeholder="Email" Text="{Binding LoginViewModel.Login}}"/>
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding LoginViewModel.Password}}"/>
        <Button Text="Login" Clicked="OnLoginClicked" />
    </StackLayout>
</ContentPage>